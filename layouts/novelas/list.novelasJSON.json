{{- $novelas := where .Site.RegularPages "Section" "novelas" -}}
{{- $sorted := sort $novelas "Params.novelId" "asc" -}}
{{- $list := slice -}}
{{- range $sorted -}}
  {{- $item := dict
    "id" .Params.novelId
    "nameJp" .Params.nameJp
    "nameEn" .Params.nameEn
    "nameEs" .Params.nameEs
    "novelTitle" .Params.novelTitle
    "genres" .Params.genres
    "link" .File.BaseFileName
  -}}
  {{- $list = $list | append $item -}}
{{- end -}}
{{- $list | jsonify -}}